@page "{restaurantId:int}"
@model OdeToFood.Pages.Restaurants.DeleteModel
@{
    ViewData["Title"] = "OdeToFood";
}

<div class="text-center">
    <h1 class="display-4">Delete Restaurant - @Model.Restaurant.Name</h1>
    <p>Delete restaurant details</p>
</div>

<div class="text-center">
    <p>Are you sure you want to delete this restaurant?</p>
    <form method="post">
        <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
        <a class="btn btn-sm btn-outline-secondary" asp-page="./List">Cancel</a>
    </form>
</div>

